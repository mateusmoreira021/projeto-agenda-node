<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Essa agenda não foi comprada pela Disney.</p>

            <%- include('includes/messages') %>

            <% if(contatos.length > 0){ %>
            <div class="responsive-table">
                <table class="table my-3">
                    <% contatos.forEach(contato =>{ %>
                        <tr>
                          <td><%= contato.nome %></td>
                          <td><%= contato.sobrenome %></td>
                          <td><%= contato.email %></td>
                          <td><%= contato.telefone %></td>
                          <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                          <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Apagar</a></td>
                        </tr>
                    <% }); %>
                </table>
            </div>
            <% }else{ %>
                <p class="text-center lead my-5">Você não tem nenhum contato =(</p>
            <% } %>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %> 