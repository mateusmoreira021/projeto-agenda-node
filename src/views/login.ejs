<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie uma conta preenchendo o formulário abaixo.</p>

            <%- include('includes/messages') %>

            <div class="row">
                <div class="col-lg">
                    <h4>Crie uma conta</h4>
                    <p>Você pode criar uma conta abaixo</p>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group my-4">
                          <label>Seu E-MAIL</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Crie uma senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                      </form>
                </div>

                <div class="col-lg offset-md-3">
                    <h4>Faça o login</h4>
                    <p>Se já tem uma conta é só entrar</p>

                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group my-4">
                          <label>Seu E-MAIL</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>


            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %> 